{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./lib",
    "paths": {
      "@handlers/*": [
        "handlers/*"
      ],
      "@types": [
        "types/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "exclude": [
    "lib/*",
    "coverage/*",
    "tcr",
    "node_modules/*"
  ],
  "include": [
    "src/**/*"
  ]
}